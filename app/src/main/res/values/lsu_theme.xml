<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LSU" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lsue_purple</item>
        <item name="colorPrimaryVariant">@color/lsue_gold</item>
        <item name="colorOnPrimary">@color/lsue_gold_shade</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="buttonStyle">@color/lsue_purple</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/lsue_purple</item>
    </style>


</resources>